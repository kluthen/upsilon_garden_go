{{define "title"}} {{.Name}} Garden {{end}}
{{define "content"}} 

<h1>{{.Name}} Garden</h1>
<h3><a href="/gardens">Back</a></h3>

<ul style="list-style-type:none;">
    <li>
        <ul class="parcel">
            <li>#</li>
            <li>Has Plant?</li>
            <li>Base Hydro</li>
            <li>Current Hydro</li>
            <li>Next Hydro End Date</li>
            <li>Actions</li>
        </ul>
    </li>
    {{range .Parcels}}
        <li>
            <ul class="parcel">
                <li>{{.Position}}</li>
                <li>{{ if ne .PlantID 0 }}<a href="plants/{{.PlantID}}">To Plant</a>
                    {{- else}}No Plant{{end}}</li>
                <li>{{.BaseHydroLevel}}</li>
                <li>{{.CurrentHydroLevel}}</li>
                <li>{{ if .HasNextHydroEndDate }}{{.NextHydroEnd}}{{end}}</li>
                <li>{{ if eq .PlantID 0 }}<a class="action" href="#" id="action_add_plant" data-parcel-id="{{.ID}}">Add Plant</a>{{end}}
                    <a class="action" href="#" id="action_water" data-parcel-id="{{.ID}}">Water Parcel</a>
                </li>
            </ul>
        </li>
    {{end}}
</ul>

{{end}}